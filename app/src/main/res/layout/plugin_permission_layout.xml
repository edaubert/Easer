<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/plugin_permission_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAppearance="@style/AppTheme.DialogTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/plugin_permission_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plugin_permission_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/plugin_permission_action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/plugin_permission_name"
        app:layout_constraintRight_toLeftOf="@+id/plugin_permission_status"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/plugin_permission_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:background="@color/transparent"
        android:contentDescription="@string/plugin_permission_status_contentdescription_ok"
        android:cropToPadding="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/plugin_permission_action"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_status_positive" />

</LinearLayout>